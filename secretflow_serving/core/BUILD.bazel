load("//bazel:serving.bzl", "serving_cc_library")

package(default_visibility = ["//visibility:public"])

serving_cc_library(
    name = "exception",
    hdrs = ["exception.h"],
    deps = [
        "//secretflow_serving/apis:error_code_cc_proto",
        "@yacl//yacl/base:exception",
    ],
)

serving_cc_library(
    name = "logging",
    srcs = ["logging.cc"],
    hdrs = ["logging.h"],
    deps = [
        ":exception",
        "//secretflow_serving/config:logging_config_cc_proto",
        "@com_github_brpc_brpc//:butil",
    ],
)

serving_cc_library(
    name = "link_func",
    srcs = ["link_func.cc"],
    hdrs = ["link_func.h"],
    deps = [
        ":exception",
        "//secretflow_serving/protos:link_function_cc_proto",
    ],
)

serving_cc_library(
    name = "types",
    hdrs = ["types.h"],
    deps = [
        "@com_github_eigenteam_eigen//:eigen3",
    ],
)

serving_cc_library(
    name = "singleton",
    hdrs = ["singleton.h"],
)
